# build external software
#

extern:
	$(MAKE) -C $(ROOT)/extern/btyacc
ifeq ($(STD_EDITLINE),false)
ifeq ($(EDITLINE_FLG),Y)
	$(MAKE) -f $(GEN_ROOT)/Makefile.extern.editline
endif
endif


